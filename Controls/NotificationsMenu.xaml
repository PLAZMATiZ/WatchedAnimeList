<UserControl x:Class="WatchedAnimeList.Controls.NotificationsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchedAnimeList.Controls"
             xmlns:helpers="clr-namespace:WatchedAnimeList.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid x:Name="NotificationsMenuPanel" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Visible">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Click="Exit_Clik" Style="{StaticResource NoFocusButton}" Background="#33000000" Grid.ColumnSpan="99" BorderThickness="0"/>

        <Grid Grid.Column="2" Margin="10,0,10,0">
            <Border Background="#141414" BorderThickness="2" BorderBrush="Black" CornerRadius="20" 
                Margin="0,10,0,6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="20"/>

            <Grid Grid.Row="1" Margin="0,20,0,20">
                <TextBlock x:Name="Notifications_" Text="" Background="Transparent"
                       FontFamily="Segoe Print" Foreground="#e5e5e5" FontSize="32" HorizontalAlignment="Center" 
                       TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Margin="16" Visibility="Visible"/>
            </Grid>
            <ListBox ItemsSource="{Binding Source={x:Static helpers:NotificationsHelper.Notifications}}" 
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     Margin="20,60,20,20"
                     FontSize="20"
                     SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="BorderElement" Height="32" HorizontalAlignment="Stretch" CornerRadius="6" Padding="6" Margin="2">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <!-- колір за замовчуванням -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock FontSize="16" Text="{Binding MessageText}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                        </Border>
                        <DataTemplate.Triggers>
                            <!-- ховер -->
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#FFFBFFEC"/>
                            </DataTrigger>

                            <!-- checked -->
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="Gray"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <EventSetter Event="MouseLeftButtonUp" Handler="Notification_Click"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
