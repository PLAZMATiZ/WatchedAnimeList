<UserControl x:Class="WatchedAnimeList.Controls.AnimeInfo_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchedAnimeList.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="#1e1e1e">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Transparent" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="Transparent" Grid.Column="0" HorizontalAlignment="Left">
                <Button Click="BackToMain_Button_Click" Style="{StaticResource NoFocusButton}" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" Margin="30,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BackBorder" Background="AliceBlue" CornerRadius="16" Padding="20,5" Margin="0,10,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BackBorder" Property="Background" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BackBorder" Property="Background" Value="#FFD8E3ED"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock x:Name="BackToMain_Text" Text="Назад" FontSize="32" VerticalAlignment="Center" FontFamily="Segoe Print"/>
                </Button>
            </Grid>
            <Grid Background="Transparent" Grid.Column="1" HorizontalAlignment="Right">
                <Button Background="Transparent" Style="{StaticResource NoFocusButton}" BorderThickness="0" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" Click="AddToBookmarks_Button_Click" Margin="0,0,30,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BackBorder" Background="#3f8cfe" CornerRadius="16" Padding="20,5" Margin="0,10,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BackBorder" Property="Background" Value="#FF277DFD"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="BackBorder" Property="Background" Value="#FF437DD4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock x:Name="AddToBookmarks_Text" Text="" FontSize="30" VerticalAlignment="Center" Foreground="AliceBlue" FontFamily="Segoe Print"/>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.4*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="#34363a" BorderThickness="2" Background="#1e1e1e" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" CornerRadius="20">

                    </Border>

                    <Grid Grid.Column="1" Width="256" Height="364" HorizontalAlignment="Center">
                        <Image x:Name="AnimePoster_Image"
                               Source="/Assets/def_poster.jpg"
                               Stretch="Fill"
                               Width="256" Height="364">
                            <Image.Clip>
                                <RectangleGeometry Rect="0,0,256,364" RadiusX="20" RadiusY="20" />
                            </Image.Clip>
                        </Image>
                    </Grid>

                    <Grid Grid.Column="2" Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.2*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="AnimeNameHint_Text" Grid.Row="0" Background="Transparent" Text="Err"
                                   Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="OriginalAnimeNameHint_Text" Grid.Row="1" Background="Transparent" Text="Err"
                                   Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="AnimReliaseDateHint_Text" Grid.Row="2" Background="Transparent" Text="Err"
                                   Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="AnimWatchDateHint_Text" Grid.Row="3" Background="Transparent" Text="Err"
                                   Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="AnimGenresHint_Text" Grid.Row="4" Background="Transparent" Text="Err"
                                   Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="AnimeWatchedEpisodesHint_Text" Grid.Row="5" Background="Transparent" Text="Err"
                                    Foreground="Gray" FontSize="12"/>

                        <TextBlock x:Name="AnimeName_Text" Grid.Row="0" Background="Transparent" Margin="20,0,0,0" Text="Err"
                                   Foreground="AliceBlue" FontSize="36" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <TextBlock x:Name="OriginalAnimeName_Text" Grid.Row="1" Background="Transparent" Text="Err"
                                   Foreground="AliceBlue" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <TextBlock x:Name="AnimeReliaseDate_Text" Grid.Row="2" Background="Transparent" Text="Err"
                                   Foreground="AliceBlue" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <TextBlock x:Name="AnimeWatchDate_Text" Grid.Row="3" Background="Transparent" Text="Err"
                                   Foreground="AliceBlue" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <TextBlock x:Name="AnimeGenres_Text" Grid.Row="4" Background="Transparent" Text="Err"
                                   Foreground="AliceBlue" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <TextBlock x:Name="AnimeWatchedEpisodes_Text" Grid.Row="5" Background="Transparent" Text="Err"
                                   Foreground="AliceBlue" FontSize="18" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
