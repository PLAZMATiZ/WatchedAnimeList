<Window x:Class="WatchedAnimeList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:local="clr-namespace:WatchedAnimeList.Controls"
        
        Title="Wached Anime List" Width="1920" Height="1080" Background="#1e1e1e" WindowStartupLocation="Manual"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="30"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="5" />
    </shell:WindowChrome.WindowChrome>

    <Grid Name="RootGrid">
        <Grid Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseDown="TitleBar_MouseDown">
                <Grid Background="#181818" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>

                    <Button  Click="MinimizeButton_Click" Grid.Column="3" Background="Transparent" BorderThickness="0" Padding="0" 
                             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource StyledButton}"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Border Grid.Column="2" Background="#e5e5e5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="14" Height="2" Margin="0,12,0,0" CornerRadius="2"/>
                    </Button>

                    <Button Click="WindowedButton_Click" Grid.Column="5" Background="Transparent" BorderThickness="0" Padding="0" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,3,0,0" Style="{StaticResource StyledButton}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" >
                            <Border BorderBrush="#e5e5e5" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="14" Height="14" Margin="0,4,0,0" CornerRadius="2"/>
                        </Grid>
                    </Button>

                    <Button Click="CloseButton_Click" Grid.Column="7" Background="Transparent" BorderThickness="0" Padding="0" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,3,0,0" Style="{StaticResource StyledButton}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" >
                            <Border Grid.Column="2" Background="#e5e5e5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="18" Height="2" 
                                Margin="0,15,0,10" 
                                CornerRadius="2"
                                RenderTransformOrigin="0.5,0.5">

                                <Border.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Border.RenderTransform>
                            </Border>

                            <Border Grid.Column="2" Background="#e5e5e5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="18" Height="2" 
                                Margin="0,15,0,10" 
                                CornerRadius="2"
                                RenderTransformOrigin="0.5,0.5">

                                <Border.RenderTransform>
                                    <RotateTransform Angle="-45"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>

            <Grid Name="MainPanel" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black"
                  AllowDrop="True" 
                  Drop="OnTorrentFileDropped"
                  DragOver="OnDragOver">
                <ContentControl x:Name="MainContent"/>
            </Grid>
            <Grid Name="BottomPanel" Grid.Row="3" VerticalAlignment="Stretch" Background="#262626" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="UpdateCircuit" CornerRadius="24" Grid.Column="1" Background="Blue" Margin="4,2" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
